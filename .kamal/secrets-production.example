# Production-specific secrets
# Copy this file to .kamal/secrets-production and fill in the actual values
# DO NOT commit the actual .kamal/secrets-production file to version control

# Environment identifier
CODE_ENV=production

# Rails environment
RAILS_ENV=production

# Production database connection URL
# This should point to your production PostgreSQL database
# Format: postgresql://username:password@hostname:port/database_name
# Example: DATABASE_URL=postgresql://prod_user:secure_password@prod-db.example.com:5432/code_production
DATABASE_URL=

# Production application URLs
BASE_URL=https://codedorian.com
HOST=codedorian.com
HOSTS=code-dorian.com,code.dorianmarie.com,codedorian.co,codedorian.com,codedorian.fr,codedorian.net,codedorian.org

# Rails master key for encrypted credentials
# Get this from config/master.key
RAILS_MASTER_KEY=

# Docker registry credentials
KAMAL_REGISTRY_USERNAME=
KAMAL_REGISTRY_PASSWORD=