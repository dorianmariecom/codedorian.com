<% content_for(:title, @job) %>

<%= turbo_stream_from(@job) %>

<% if @job.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @job.id %></div>
  </div>
<% end %>

