<div class="p">
  <%= render(
    "shared/confirm",
    text: t(".retry"),
    url: [*show_url, :retry],
    method: :post
  ) %>
  <%= render(
    "shared/confirm",
    text: t(".discard"),
    url: [*show_url, :discard],
    method: :post
  ) %>
  <%= link_to(t(".edit"), edit_url, class: :link) %>
  <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
  <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
</div>

<div class="p font-bold">
  <%= link_to(t(".job_contexts"), [*nested, @job, :job_contexts], class: :link) %>
</div>

<%= render_collection(
  partial: "job_contexts/job_context",
  collection: @job_contexts,
  as: :job_context,
  locals: {
    nested: [*nested, @job]
