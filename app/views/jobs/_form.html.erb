<%= form_for(show_url) do |f| %>
  <% arguments =
    (
      if f.object.errors.include?(:arguments)
        f.object.arguments
      else
        f.object.arguments_json
      end
    ) %>

  <div class="p">
    <%= f.label(:active_job_id, class: :label) %>
    <%= f.text_field(
      :active_job_id,
      class: :input,
      autocomplete: :off,
      data: { form_type: :other }
    ) %>
  </div>

  <div class="p">
    <%= f.label(:class_name, class: :label) %>
    <%= f.text_field(
      :class_name,
      class: :input,
      autocomplete: :off,
      data: { form_type: :other }
    ) %>
  </div>

  <div class="p">
    <%= f.label(:queue_name, class: :label) %>
    <%= f.text_field(
      :queue_name,
      class: :input,
      autocomplete: :off,
      data: { form_type: :other }
    ) %>
  </div>

  <div class="p">
    <%= f.label(:priority, class: :label) %>
    <%= f.number_field(
      :priority,
      class: :input,
      autocomplete: :off,
      data: { form_type: :other }
    ) %>
  </div>

  <div class="p">
    <%= f.label(:concurrency_key, class: :label) %>
    <%= f.text_field(
      :concurrency_key,
      class: :input,
      autocomplete: :off,
      data: { form_type: :other }
    ) %>
  </div>

  <div class="p">
    <%= f.label(:scheduled_at, class: :label) %>
    <%= f.datetime_field(
      :scheduled_at,
      class: :input,
      autocomplete: :off,
      data: { form_type: :other }
    ) %>
  </div>

  <div class="p">
    <%= f.label(:finished_at, class: :label) %>
    <%= f.datetime_field(
      :finished_at,
      class: :input,
      autocomplete: :off,
      data: { form_type: :other }
    ) %>
  </div>

  <div class="p" data-controller="editor">
    <%= f.label(:arguments, class: :label) %>
    <div class="border border-black rounded overflow-hidden">
      <%= f.hidden_field(
        :arguments,
        value: arguments,
        autocomplete: :off,
        data: { editor_target: :input, form_type: :other }
      ) %>
      <div data-editor-target="editor"></div>
    </div>
    <div class="text-gray-600"><%= Faker::Internet.slug.to_json %></div>
  </div>

  <div class="p">
    <%= f.submit(
      submit,
      class: "button",
      data: {
        controller: "bridge--button",
        bridge__button_title_value: submit
      }
    ) %>
  </div>
<% end %>
