<% content_for(:title, @submission_section) %>

<%= turbo_stream_from(@submission_section) %>

<% if can?(:update, @submission_section) %>
  <% if @submission_section.id.present? %>
    <div class="p">
      <div class="text-gray-600"><%= t(".id") %></div>
      <div class="font-bold"><%= @submission_section.id %></div>
    </div>
  <% end %>
<% end %>

<% if @submission_section.submission.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".submission") %></div>
    <% if can?(:show, @submission_section.submission) %>
      <%= link_to(
        @submission_section.submission,
        @submission_section.submission,
        class: :link
      ) %>
    <% else %>
      <div class="font-bold"><%= @submission_section.submission %></div>
    <% end %>
  </div>
<% end %>

<% if @submission_section.locale.present? && can?(:update, @submission_section) %>
  <div class="p">
    <div class="text-gray-600"><%= t(".locale") %></div>
    <div class="font-bold"><%= @submission_section.locale %></div>
  </div>
<% end %>

<% if @submission_section.name.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".name") %></div>
    <div class="font-bold"><%= @submission_section.name %></div>
  </div>
<% end %>

<% if @submission_section.description.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".description") %></div>
    <div class="content">
      <%= simple_format(@submission_section.description, {}, wrapper_tag: :div) %>
    </div>
  </div>
<% end %>

<% if can?(:update, @submission_section) %>
  <% if @submission_section.updated_at.present? %>
    <div class="p">
      <div class="text-gray-600"><%= t(".updated_at") %></div>
      <div class="font-bold">
        <%= local_time(@submission_section.updated_at, format: :default) %>
      </div>
    </div>
  <% end %>

  <% if @submission_section.created_at.present? %>
    <div class="p">
      <div class="text-gray-600"><%= t(".created_at") %></div>
      <div class="font-bold">
        <%= local_time(@submission_section.created_at, format: :default) %>
      </div>
    </div>
  <% end %>

  <div class="p">
    <%= link_to(t(".edit"), edit_url, class: :link) %>
    <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
    <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
  </div>
<% end %>

<div class="p font-bold">
  <%= link_to(
    t(".submission_programs"),
    [*nested, @submission_section, :submission_programs],
    class: :link
  ) %>
</div>

<% if can?(:create, SubmissionProgram) %>
  <div class="p">
    <%= link_to(
      t(".new_submission_program"),
      [:new, *nested, @submission_section, :submission_program],
      class: "button"
    ) %>
  </div>
<% end %>

<%= render_collection(
  partial: "submission_programs/submission_program",
  collection: @submission_programs,
  as: :submission_program,
  locals: {
    nested: [*nested, @submission_section]
  }
) %>

