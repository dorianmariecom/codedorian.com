<%= turbo_stream_from(@submission_sections) %>

<% if can?(:create, SubmissionSection) %>
  <div class="p p--flex">
    <%= link_to(t(".new"), new_url, class: "button") %>
  </div>
<% end %>

<%= render("shared/search") %>

<turbo-frame id="search" target="_top">
  <% if @submission_sections.any? && can?(:destroy_all, SubmissionSection) %>
    <div class="p p--flex">
      <%= render("shared/confirm", url: destroy_all_url, text: t(".destroy_all")) %>
      <%= render("shared/confirm", url: delete_all_url, text: t(".delete_all")) %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "submission_sections/submission_section",
    collection: @submission_sections,
    as: :submission_section,
    locals: {
      nested: [@submission].compact
    }
  ) %>
</turbo-frame>
