<% content_for(:title, @repl_execution) %>

<%= turbo_stream_from(@repl_execution) %>

<% if @repl_execution.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @repl_execution.id %></div>
  </div>
<% end %>

<% if @repl_execution.user.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".user") %></div>
    <%= render("shared/user", user: @repl_execution.user) %>
  </div>
<% end %>

<% if @repl_execution.repl_session.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".repl_session") %></div>
    <% if can?(:show, @repl_execution.repl_session) %>
      <div class="font-bold">
        <%= link_to(
          @repl_execution.repl_session,
          [@user, @repl_execution.repl_session],
          class: "link"
        ) %>
      </div>
    <% else %>
      <div class="font-bold"><%= @repl_execution.repl_session %></div>
    <% end %>
  </div>
<% end %>

<% if @repl_execution.repl_program.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".repl_program") %></div>
    <% if can?(:show, @repl_execution.repl_program) %>
      <div class="font-bold">
        <%= link_to(
          @repl_execution.repl_program,
          [@user, @repl_session, @repl_execution.repl_program],
          class: "link"
        ) %>
      </div>
    <% else %>
      <div class="font-bold"><%= @repl_execution.repl_program %></div>
    <% end %>
  </div>
<% end %>

<% if @repl_execution.output.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".output") %></div>
    <div class="code"><%= @repl_execution.output %></div>
  </div>
<% end %>

<% if @repl_execution.result.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".result") %></div>
    <div class="code"><%= @repl_execution.result %></div>
  </div>
<% end %>

<% if @repl_execution.error.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".error") %></div>
    <div class="code"><%= @repl_execution.error %></div>
  </div>
<% end %>

<% if @repl_execution.input.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".input") %></div>
    <div class="code"><%= @repl_execution.input %></div>
  </div>
<% end %>

<% if @repl_execution.context.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".context") %></div>
    <div class="code"><%= @repl_execution.context %></div>
  </div>
<% end %>

<% if @repl_execution.updated_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".updated_at") %></div>
    <div class="font-bold"><%= local_time(@repl_execution.updated_at) %></div>
  </div>
<% end %>

<% if @repl_execution.created_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".created_at") %></div>
    <div class="font-bold"><%= local_time(@repl_execution.created_at) %></div>
  </div>
<% end %>

<div class="p">
  <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
  <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
</div>
