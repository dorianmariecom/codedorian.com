<% content_for(:title, @device) %>

<%= turbo_stream_from(@device) %>

<% if @device.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @device.id %></div>
  </div>
<% end %>

<% if @device.user.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".user") %></div>
    <%= render("shared/user", user: @device.user) %>
  </div>
<% end %>

<% if @device.platform.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".platform") %></div>
    <strong><%= @device.platform %></strong>
  </div>
<% end %>

<% if @device.token.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".token") %></div>
    <strong><%= @device.token %></strong>
  </div>
<% end %>

<% if @device.primary.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".primary") %></div>
    <div class="font-bold"><%= @device.primary? %></div>
  </div>
<% end %>

<% if admin? && @device.verified.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".verified") %></div>
    <div class="font-bold"><%= @device.verified? %></div>
  </div>
<% end %>

<% if @device.updated_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".updated_at") %></div>
    <strong><%= local_time(@device.updated_at, format: :default) %></strong>
  </div>
<% end %>

<% if @device.created_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".created_at") %></div>
    <strong><%= local_time(@device.created_at, format: :default) %></strong>
  </div>
<% end %>

<div class="p p--flex">
  <%= link_to(t(".edit"), edit_url, class: :link) %>
  <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
  <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
</div>

<% if can?(:index, Version) %>
  <div class="p font-bold">
    <%= link_to(t(".versions"), [*nested, @device, :versions], class: :link) %>
  </div>

  <% if can?(:create, Version) %>
    <div class="p">
      <%= link_to(t(".new_version"), [:new, *nested, @device, :version], class: "button") %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "versions/version",
    collection: @versions,
    as: :version,
    locals: {
      nested: [*nested, @device]
    }
  ) %>
<% end %>

<% if can?(:index, Log) %>
  <div class="p font-bold">
    <%= link_to(t(".logs"), [*nested, @device, :logs], class: :link) %>
  </div>

  <% if can?(:create, Log) %>
    <div class="p">
      <%= link_to(t(".new_log"), [:new, *nested, @device, :log], class: "button") %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "logs/log",
    collection: @logs,
    as: :log,
    locals: {
      nested: [*nested, @device]
    }
  ) %>
<% end %>
