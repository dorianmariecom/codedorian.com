<%= turbo_stream_from(@repl_sessions) %>

<% if @repl_programs.any? %>
  <div class="p">
    <%= link_to(
      t(".repl_programs", count: @repl_programs.size),
      [@user || @guest, :repl_programs],
      class: "link"
    ) %>
  </div>
<% end %>

<% if @repl_prompts.any? %>
  <div class="p">
    <%= link_to(
      t(".repl_prompts", count: @repl_prompts.size),
      [@user || @guest, :repl_prompts],
      class: "link"
    ) %>
  </div>
<% end %>

<% if @repl_executions.any? %>
  <div class="p">
    <%= link_to(
      t(".repl_executions", count: @repl_executions.size),
      [@user || @guest, :repl_executions],
      class: "link"
    ) %>
  </div>
<% end %>

<div class="p"><%= link_to(t(".new"), new_url, class: "button") %></div>

<%= render("shared/search") %>

<turbo-frame id="search" target="_top">
  <% if @repl_sessions.any? %>
    <div class="p">
      <%= render(
        "shared/confirm",
        url: [:destroy_all, *index_url],
        text: t(".destroy_all")
      ) %>
      <%= render("shared/confirm", url: [:delete_all, *index_url], text: t(".delete_all")) %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "repl_sessions/repl_session",
    collection: @repl_sessions,
    as: :repl_session
  ) %>
</turbo-frame>
