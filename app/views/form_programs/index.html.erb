<%= turbo_stream_from(@form_programs) %>

<% if can?(:create, FormProgram) %>
  <div class="p p--flex">
    <%= link_to(t(".new"), new_url, class: "button") %>
  </div>
<% end %>

<%= render("shared/search") %>

<turbo-frame id="search" target="_top">
  <% if @form_programs.any? && can?(:destroy_all, FormProgram) %>
    <div class="p p--flex">
      <%= render("shared/confirm", url: destroy_all_url, text: t(".destroy_all")) %>
      <%= render("shared/confirm", url: delete_all_url, text: t(".delete_all")) %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "form_programs/form_program",
    collection: @form_programs,
    as: :form_program
  ) %>
</turbo-frame>
