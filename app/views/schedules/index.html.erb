<%= turbo_stream_from @schedules %>

<div class="p"><%= link_to t(".new"), new_url, class: "button" %></div>

<% if @schedules.any? %>
  <div class="p">
    <%= button_to t(".delete_all"), url, method: :delete, class: "button button--link" %>
  </div>
<% end %>

<%= render_collection partial: "schedules/schedule",
                  collection: @schedules,
                  as: :schedule %>
