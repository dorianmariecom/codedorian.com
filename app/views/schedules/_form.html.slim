= form_for schedule do |f|
  - if admin?
    .p
      = f.label :program_id, class: "label"
      = f.select :program_id, program_options(program_id: f.object.program_id), {}, class: "input"

  .p
    = f.label :starts_at, class: "label"
    = f.datetime_field :starts_at, required: true, class: "input", autocomplete: "off", data: { form_type: "other" }
    .text-red-600(hidden data-validation-target="error")
    .text-gray-600= local_time(Time.zone.now)

  .p
    = f.label :interval, class: "label"
    = f.select :interval, schedule_interval_options(interval: f.object.interval), {}, required: true, class: "input", data: { form_type: "other" }, autocomplete: "off"

  .p= f.submit submit, class: "button"
