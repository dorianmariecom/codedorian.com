<h1 class="font-bold mb-4 text-center"><%= t(".title") %></h1>

<% if guest? %>
  <div class="p text-center">
    <%= link_to(t(".register"), %i[new user], class: "button") %>
    <%= link_to(t(".log_in"), %i[new session], class: "button") %>
  </div>
<% elsif !hotwire_native_app? && !current_user_or_guest.unverified_device %>
  <div class="p text-center">
    <%= link_to(Config.ios.url) do %>
      <%= image_tag("ios-#{I18n.locale}.svg", class: "h-14 inline-block mb-4") %>
    <% end %>

    <%= link_to(Config.android.url) do %>
      <%= image_tag("android-#{I18n.locale}.svg", class: "h-14 inline-block mb-4") %>
    <% end %>
  </div>
<% else %>
  <div class="p text-center">
    <%= link_to(t(".messages"), [current_user_or_guest, :messages], class: "button") %>
    <%= link_to(t(".programs"), [current_user_or_guest, :programs], class: "button") %>
  </div>
<% end %>

<% t(".quotes").each.with_index do |quote, index| %>
  <div class="text-center p">
    "<%= quote[:content] %>"
    -
    <span class="text-gray-600"><%= quote[:author] %></span>
  </div>
<% end %>
