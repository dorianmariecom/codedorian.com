<% content_for(:title, @repl_program) %>

<%= turbo_stream_from(@repl_program) %>

<% if @repl_program.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @repl_program.id %></div>
  </div>
<% end %>

<% if @repl_program.user.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".user") %></div>
    <%= render("shared/user", user: @repl_program.user) %>
  </div>
<% end %>

<% if @repl_program.repl_session.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".repl_session") %></div>
    <% if can?(:show, @repl_program.repl_session) %>
      <div class="font-bold">
        <%= link_to(
          @repl_program.repl_session,
          [@user, @repl_program.repl_session],
          class: "link"
        ) %>
      </div>
    <% else %>
      <div class="font-bold"><%= @repl_program.repl_session %></div>
    <% end %>
  </div>
<% end %>

<% if @repl_program.input.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".input") %></div>
    <div class="code"><%= @repl_program.input %></div>
  </div>
<% end %>

<% if @repl_program.updated_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".updated_at") %></div>
    <div class="font-bold"><%= local_time(@repl_program.updated_at) %></div>
  </div>
<% end %>

<% if @repl_program.created_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".created_at") %></div>
    <div class="font-bold"><%= local_time(@repl_program.created_at) %></div>
  </div>
<% end %>

<div class="p">
  <%= link_to(t(".edit"), edit_url, class: "link") %>
  <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
  <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
</div>

<div class="p font-bold">
  <%= link_to(
    t(".repl_executions"),
    [@user, @repl_session, @repl_program, :repl_executions],
    class: "link"
  ) %>
</div>

<%= render_collection(
  partial: "repl_executions/repl_execution",
  collection: @repl_executions,
  as: :repl_execution,
  locals: {
    nested: [@user, @repl_session, @repl_program]
  }
) %>

<div class="p font-bold">
  <%= link_to(
    t(".repl_prompts"),
    [@user, @repl_session, @repl_program, :repl_prompts],
    class: "link"
  ) %>
</div>

<div class="p">
  <%= link_to(
    t(".new_repl_prompt"),
    [:new, @user, @repl_session, @repl_program, :repl_prompt],
    class: "button"
  ) %>
</div>

<%= render_collection(
  partial: "repl_prompts/repl_prompt",
  collection: @repl_prompts,
  as: :repl_prompt,
  locals: {
    nested: [@user, @repl_session, @repl_program]
  }
) %>
