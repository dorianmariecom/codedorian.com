<%= turbo_stream_from(@repl_programs) %>

<% if @repl_executions.any? %>
  <div class="p">
    <%= link_to(
      t(".repl_executions", count: @repl_executions.size),
      [@user || @guest, @repl_session, :repl_executions],
      class: "link"
    ) %>
  </div>
<% end %>

<% if @repl_prompts.any? %>
  <div class="p">
    <%= link_to(
      t(".repl_prompts", count: @repl_prompts.size),
      [@user || @guest, @repl_session, :repl_prompts],
      class: "link"
    ) %>
  </div>
<% end %>

<div class="p"><%= link_to(t(".new"), new_url, class: "button") %></div>

<%= render("shared/search") %>

<turbo-frame id="search" target="_top">
  <% if @repl_programs.any? %>
    <div class="p">
      <%= render("shared/confirm", url: destroy_all_url, text: t(".destroy_all")) %>
      <%= render("shared/confirm", url: delete_all_url, text: t(".delete_all")) %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "repl_programs/repl_program",
    collection: @repl_programs,
    as: :repl_program
  ) %>
</turbo-frame>
