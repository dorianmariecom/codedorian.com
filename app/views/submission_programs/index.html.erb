<%= turbo_stream_from(@submission_programs) %>

<% if can?(:create, SubmissionProgram) %>
  <div class="p p--flex">
    <%= link_to(t(".new"), new_url, class: "button") %>
  </div>
<% end %>

<%= render("shared/search") %>

<turbo-frame id="search" target="_top">
  <% if @submission_programs.any? && can?(:destroy_all, SubmissionProgram) %>
    <div class="p p--flex">
      <%= render("shared/confirm", url: destroy_all_url, text: t(".destroy_all")) %>
      <%= render("shared/confirm", url: delete_all_url, text: t(".delete_all")) %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "submission_programs/submission_program",
    collection: @submission_programs,
    as: :submission_program
  ) %>
</turbo-frame>
