<% content_for(:title, @password) %>

<%= turbo_stream_from(@password) %>

<% if @password.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @password.id %></div>
  </div>
<% end %>

<% if @password.user.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".user") %></div>
    <%= render("shared/user", user: @password.user) %>
  </div>
<% end %>

<% if @password.hint.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".hint") %></div>
    <div class="font-bold"><%= @password.hint %></div>
  </div>
<% end %>

<div class="p">
  <div class="text-gray-600"><%= t(".password") %></div>
  <div class="font-bold">***</div>
</div>

<div class="p">
  <div class="text-gray-600"><%= t(".primary") %></div>
  <div class="font-bold"><%= @password.primary? %></div>
</div>

<div class="p">
  <div class="text-gray-600"><%= t(".verified") %></div>
  <div class="font-bold"><%= @password.verified? %></div>
</div>

<% if @password.updated_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".updated_at") %></div>
    <div class="font-bold"><%= local_time(@password.updated_at) %></div>
  </div>
<% end %>

<% if @password.created_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".created_at") %></div>
    <div class="font-bold"><%= local_time(@password.created_at) %></div>
  </div>
<% end %>

<div class="p">
  <%= link_to(t(".edit"), edit_url, class: "link") %>
  <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
  <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
</div>
