<%= turbo_stream_from(@programs) %>

<div class="p">
  <%= link_to(t(".examples", count: @examples.size), :examples, class: :link) %>
</div>

<div class="p">
  <%= link_to(t(".data", count: @data.size), [@user || @guest, :data], class: :link) %>
</div>

<% if @program_executions.any? %>
  <div class="p p--flex">
    <%= link_to(
      t(".program_executions", count: @program_executions.size),
      [@user || @guest, :program_executions],
      class: :link
    ) %>
  </div>
<% end %>

<% if @program_schedules.any? %>
  <div class="p p--flex">
    <%= link_to(
      t(".program_schedules", count: @program_schedules.size),
      [@user || @guest, :program_schedules],
      class: :link
    ) %>
  </div>
<% end %>

<div class="p"><%= link_to(t(".new"), new_url, class: "button") %></div>

<%= render("shared/search") %>

<turbo-frame id="search" target="_top">
  <% if @programs.any? %>
    <div class="p p--flex">
      <%= render(
        "shared/confirm",
        url: [:schedule_all, *index_url],
        text: t(".schedule_all"),
        method: :patch
      ) %>
      <%= render(
        "shared/confirm",
        url: [:unschedule_all, *index_url],
        text: t(".unschedule_all"),
        method: :patch
      ) %>
      <%= render("shared/confirm", url: destroy_all_url, text: t(".destroy_all")) %>
      <%= render("shared/confirm", url: delete_all_url, text: t(".delete_all")) %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "programs/program",
    collection: @programs,
    as: :program
  ) %>
</turbo-frame>
