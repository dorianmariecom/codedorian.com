<%= turbo_stream_from @programs %>

<div class="p"><%= link_to t(".new"), new_url, class: "button" %></div>

<% if @programs.any? %>
  <div class="p">
    <%= button_to t(".delete_all"), url, method: :delete, class: "button button--link" %>
  </div>
<% end %>

<%= render_collection partial: "programs/program",
                  collection: @programs,
                  as: :program %>
