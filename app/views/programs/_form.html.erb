<%= form_for(
  show_url,
  html: {
    class: "flex-1 flex flex-col",
    data: {
      controller: "editor",
      editor_language_value: "code"
    }
  }
) do |f| %>
  <% if admin? %>
    <div class="p">
      <%= f.label(:user_id, class: :label) %>
      <%= f.select(
        :user_id,
        user_options(user_id: f.object.user_id),
        {},
        class: :input,
        autocomplete: :off,
        data: {
          form_type: :other
        }
      ) %>
    </div>
  <% end %>

  <div class="p">
    <%= f.label(:name, class: :label) %>
    <%= f.text_field(
      :name,
      class: :input,
      autocomplete: "off",
      data: {
        form_type: :other
      }
    ) %>
    <div class="text-red-600" data-editor-target="error"></div>
  </div>

  <div class="p flex-1 flex flex-col">
    <%= f.label(:input, class: :label) %>
    <div
      class="flex-1 flex flex-col border border-black rounded overflow-hidden"
    >
      <%= f.hidden_field(
        :input,
        autocomplete: :off,
        data: {
          editor_target: :input,
          form_type: :other
        }
      ) %>
      <div
        class="flex-1 flex flex-col min-h-96"
        data-editor-target="editor"
      ></div>
    </div>
  </div>

  <%= render("program_schedules/nested", f: f) %>

  <div class="p">
    <%= f.submit(
      submit,
      class: "button",
      data: {
        controller: "bridge--button",
        bridge__button_title_value: submit
      }
    ) %>
  </div>
<% end %>
