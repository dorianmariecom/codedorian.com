<%= turbo_stream_from @messages %>

<div class="p"><%= link_to t(".new"), new_url, class: "button" %></div>

<%= render "shared/search" %>

<% if @messages.any? %>
  <div class="p">
    <%= button_to t(".delete_all"), url, method: :delete, class: "button button--link" %>
  </div>
<% end %>

<%= render_collection partial: "messages/message",
                  collection: @messages,
                  as: :message %>
