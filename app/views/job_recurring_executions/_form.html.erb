<%= form_for(show_url) do |f| %>
  <div class="p">
    <%= f.label(:job_id, class: :label) %>
    <%= f.number_field(
      :job_id,
      class: :input,
      autocomplete: :off,
      data: {
        form_type: :other
      }
    ) %>
  </div>

  <div class="p">
    <%= f.label(:task_key, class: :label) %>
    <%= f.text_field(
      :task_key,
      class: :input,
      autocomplete: :off,
      data: {
        form_type: :other
      }
    ) %>
  </div>

  <div class="p">
    <%= f.label(:run_at, class: :label) %>
    <%= f.datetime_field(
      :run_at,
      class: :input,
      autocomplete: :off,
      data: {
        form_type: :other
      }
    ) %>
  </div>

  <div class="p">
    <%= f.submit(
      submit,
      class: "button",
      data: {
        controller: "bridge--button",
        bridge__button_title_value: submit
      }
    ) %>
  </div>
<% end %>
