<%= turbo_stream_from(@configurations) %>

<div class="p"><%= link_to(t(".new"), new_url, class: "button") %></div>

<%= render("shared/search") %>

<turbo-frame id="search" target="_top">
  <% if @configurations.any? %>
    <div class="p">
      <%= render(
        "shared/confirm",
        url: [:destroy_all, *index_url],
        text: t(".destroy_all")
      ) %>
      <%= render("shared/confirm", url: [:delete_all, *index_url], text: t(".delete_all")) %>
    </div>
  <% end %>

  <%= render_collection(partial: "configurations/configuration", collection: @configurations, as: :configuration) %>
</turbo-frame>
