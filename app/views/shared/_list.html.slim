- user = local_assigns.fetch(:user)
- model = local_assigns.fetch(:model)

.p.font-bold= link_to t(".#{model.name.underscore.pluralize}"), [user, model], class: "underline"

.p= link_to t(".new_#{model.name.underscore}"), [:new, model.name.underscore.to_sym], class: "button"

= render policy_scope(model).where(user:)
