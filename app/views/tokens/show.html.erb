<% content_for(:title, @token) %>

<%= turbo_stream_from(@token) %>

<% if @token.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @token.id %></div>
  </div>
<% end %>

<% if @token.user.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".user") %></div>
    <%= render("shared/user", user: @token.user) %>
  </div>
<% end %>

<% if @token.token.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".token") %></div>
    <strong><%= @token.token %></strong>
  </div>
<% end %>

<% if @token.primary.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".primary") %></div>
    <div class="font-bold"><%= @token.primary? %></div>
  </div>
<% end %>

<% if admin? && @token.verified.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".verified") %></div>
    <div class="font-bold"><%= @token.verified? %></div>
  </div>
<% end %>

<% if @token.updated_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".updated_at") %></div>
    <strong><%= local_time(@token.updated_at, format: :default) %></strong>
  </div>
<% end %>

<% if @token.created_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".created_at") %></div>
    <strong><%= local_time(@token.created_at, format: :default) %></strong>
  </div>
<% end %>

<div class="p p--flex">
  <%= link_to(t(".edit"), edit_url, class: :link) %>
  <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
  <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
</div>

<% if can?(:index, Version) %>
  <div class="p font-bold">
    <%= link_to(t(".versions"), [*nested, @token, :versions], class: :link) %>
  </div>

  <% if can?(:create, Version) %>
    <div class="p">
      <%= link_to(t(".new_version"), [:new, *nested, @token, :version], class: "button") %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "versions/version",
    collection: @versions,
    as: :version,
    locals: {
      nested: [*nested, @token]
    }
  ) %>
<% end %>

<% if can?(:index, Log) %>
  <div class="p font-bold">
    <%= link_to(t(".logs"), [*nested, @token, :logs], class: :link) %>
  </div>

  <% if can?(:create, Log) %>
    <div class="p">
      <%= link_to(t(".new_log"), [:new, *nested, @token, :log], class: "button") %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "logs/log",
    collection: @logs,
    as: :log,
    locals: {
      nested: [*nested, @token]
    }
  ) %>
<% end %>
