<%= form_for(show_url) do |f| %>
  <div class="p">
    <%= f.label(:job_id, class: :label) %>
    <%= f.number_field(:job_id, class: :input) %>
  </div>

  <div class="p">
    <%= f.label(:process_id, class: :label) %>
    <%= f.number_field(:process_id, class: :input) %>
  </div>

  <div class="p">
    <%= f.submit(
      submit,
      class: "button",
      data: {
        controller: "bridge--button",
        bridge__button_title_value: submit
      }
    ) %>
  </div>
<% end %>
