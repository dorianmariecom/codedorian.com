<% content_for(:title, @country_code_ip_address) %>

<%= turbo_stream_from(@country_code_ip_address) %>

<% if @country_code_ip_address.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @country_code_ip_address.id %></div>
  </div>
<% end %>

<% if @country_code_ip_address.ip_address.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".ip_address") %></div>
    <div class="font-bold"><%= @country_code_ip_address.ip_address %></div>
  </div>
<% end %>

<% if @country_code_ip_address.country_code.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".country_code") %></div>
    <div class="font-bold"><%= @country_code_ip_address.country_code %></div>
  </div>
<% end %>

<% if @country_code_ip_address.updated_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".updated_at") %></div>
    <div class="font-bold">
      <%= local_time(@country_code_ip_address.updated_at) %>
    </div>
  </div>
<% end %>

<% if @country_code_ip_address.created_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".created_at") %></div>
    <div class="font-bold">
      <%= local_time(@country_code_ip_address.created_at) %>
    </div>
  </div>
<% end %>

<div class="p">
  <%= render(
    "shared/confirm",
    text: t(".lookup"),
    url: [*show_url, :lookup],
    method: :post,
    class: "button"
  ) %>
</div>

<div class="p p--flex">
  <%= link_to(t(".edit"), edit_url, class: :link) %>
  <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
  <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
</div>

<% if can?(:index, Version) %>
  <div class="p font-bold">
    <%= link_to(t(".versions"), [@country_code_ip_address, :versions], class: :link) %>
  </div>

  <% if can?(:create, Version) %>
    <div class="p">
      <%= link_to(
        t(".new_version"),
        [:new, @country_code_ip_address, :version],
        class: "button"
      ) %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "versions/version",
    collection: @versions,
    as: :version,
    locals: {
      nested: [@country_code_ip_address]
    }
  ) %>
<% end %>

<% if can?(:index, Log) %>
  <div class="p font-bold">
    <%= link_to(t(".logs"), [@country_code_ip_address, :logs], class: :link) %>
  </div>

  <% if can?(:create, Log) %>
    <div class="p">
      <%= link_to(t(".new_log"), [:new, @country_code_ip_address, :log], class: "button") %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "logs/log",
    collection: @logs,
    as: :log,
    locals: {
      nested: [@country_code_ip_address]
    }
  ) %>
<% end %>
