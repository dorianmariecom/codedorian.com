<%= form_for(show_url) do |f| %>
  <div class="p">
    <%= f.label(:ip_address, class: "label") %>
    <%= f.text_field(
      :ip_address,
      required: true,
      class: "input",
      autocomplete: "off"
    ) %>
  </div>

  <div class="p">
    <%= f.label(:country_code, class: "label") %>
    <%= f.text_field(
      :country_code,
      class: "input",
      autocomplete: "off"
    ) %>
  </div>

  <div class="p">
    <%= f.submit(
      submit,
      class: "button",
      data: {
        controller: "bridge--button",
        bridge__button_title_value: submit
      }
    ) %>
  </div>
<% end %>