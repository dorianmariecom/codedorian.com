<%= form_for(show_url) do |f| %>
  <div
    class="p"
    data-controller="validation"
    data-validation-trim-value="true"
    data-validation-gender-value="feminine"
  >
    <%= f.label(:ip_address, class: "label", data: { validation_target: "label" }) %>
    <%= f.text_field(
      :ip_address,
      class: "input",
      required: true,
      data: {
        validation_target: "input",
        action: "validation#input",
        form_type: "other"
      },
      autocomplete: "off"
    ) %>
    <div class="text-red-600" hidden data-validation-target="error"></div>
  </div>

  <div
    class="p"
    data-controller="validation"
    data-validation-trim-value="true"
    data-validation-gender-value="masculine"
  >
    <%= f.label(:country_code, class: "label", data: { validation_target: "label" }) %>
    <%= f.text_field(
      :country_code,
      class: "input",
      data: {
        validation_target: "input",
        action: "validation#input",
        form_type: "other"
      },
      autocomplete: "off"
    ) %>
    <div class="text-red-600" hidden data-validation-target="error"></div>
  </div>

  <div class="p">
    <%= f.submit(
      submit,
      class: "button",
      data: {
        controller: "bridge--button",
        bridge__button_title_value: submit
      }
    ) %>
  </div>
<% end %>