<% content_for(:title, @error_occurrence) %>

<%= turbo_stream_from(@error_occurrence) %>

<% if @error_occurrence.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @error_occurrence.id %></div>
  </div>
<% end %>

<% if @error_occurrence.error.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".error") %></div>

    <% if can?(:show, @error_occurrence.error) %>
      <div class="font-bold">
        <%= link_to(@error_occurrence.error, [@user, @error_occurrence.error], class: :link) %>
      </div>
    <% else %>
      <div class="font-bold"><%= @error_occurrence.error %></div>
    <% end %>
  </div>
<% end %>

<% if @error_occurrence.context.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".context") %></div>
    <div class="code"><%= @error_occurrence.context_json %></div>
  </div>
<% end %>

<% if @error_occurrence.app_backtrace.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".app_backtrace") %></div>
    <div class="code"><%= @error_occurrence.app_backtrace %></div>
  </div>
<% end %>

<% if @error_occurrence.backtrace.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".full_backtrace") %></div>
    <div class="code"><%= @error_occurrence.backtrace %></div>
  </div>
<% end %>

<% if @error_occurrence.updated_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".updated_at") %></div>
    <div class="font-bold">
      <%= local_time(@error_occurrence.updated_at, format: :default) %>
    </div>
  </div>
<% end %>

<% if @error_occurrence.created_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".created_at") %></div>
    <div class="font-bold">
      <%= local_time(@error_occurrence.created_at, format: :default) %>
    </div>
  </div>
<% end %>

<div class="p p--flex">
  <%= link_to(t(".edit"), edit_url, class: :link) %>
  <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
  <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
</div>

<% if can?(:index, Log) %>
  <div class="p font-bold">
    <%= link_to(t(".logs"), [*nested, @error_occurrence, :logs], class: :link) %>
  </div>

  <% if can?(:create, Log) %>
    <div class="p">
      <%= link_to(
        t(".new_log"),
        [:new, *nested, @error_occurrence, :log],
        class: "button"
      ) %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "logs/log",
    collection: @logs,
    as: :log,
    locals: {
      nested: [*nested, @error_occurrence]
    }
  ) %>
<% end %>
