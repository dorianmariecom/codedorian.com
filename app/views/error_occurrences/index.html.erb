<%= turbo_stream_from @error_occurrences %>

<%= render "shared/search" %>

<% if @error_occurrences.any? %>
  <div class="p">
    <%= render "shared/confirm", url: destroy_all_url, text: t(".destroy_all") %>
    <%= render "shared/confirm", url: delete_all_url, text: t(".delete_all") %>
  </div>
<% end %>

<%= render_collection partial: "error_occurrences/error_occurrence",
                  collection: @error_occurrences,
                  as: :error_occurrence %>
