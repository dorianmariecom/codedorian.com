- content_for(:title, @email_address)

- if @email_address.user.present?
  .p
    .text-gray-600= t(".user")

    - if can?(:show, @email_address.user)
      .font-bold= link_to @email_address.user, @email_address.user, class: "underline"
    - else
      .font-bold= @email_address.user

- if @email_address.email_address.present?
  .p
    .text-gray-600= t(".email_address")
    .font-bold= @email_address.email_address

.p
  .text-gray-600= t(".primary")
  .font-bold= @email_address.primary?

.p
  .text-gray-600= t(".verified")
  .font-bold= @email_address.verified?

.p
  .text-gray-600= t(".updated_at")
  .font-bold= local_time(@email_address.updated_at)

.p
  .text-gray-600= t(".created_at")
  .font-bold= local_time(@email_address.created_at)

.p
  => link_to t(".edit"), [:edit, @email_address], class: "underline"
  => button_to t(".delete"), @email_address, method: :delete, class: "underline", form_class: "inline-block"
