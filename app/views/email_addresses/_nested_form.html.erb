<div class="email-address border-l border-black pl-5" data-new-record="<%= f.object.new_record? %>">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>

  <h2 class="font-bold p"><%= t(".email_address") %></h2>

  <div class="p" data-controller="validation" data-validation-trim-value="true" data-validation-gender-value="feminine">
    <%= f.label :email_address, class: "label", data: { validation_target: "label" } %>
    <%= f.email_field :email_address, 
          class: "input", 
          required: true, 
          data: { validation_target: "input", action: "validation#input", form_type: "other" }, 
          autocomplete: "email", 
          placeholder: t(".email_address_placeholder") %>
    <div class="text-red-600" hidden data-validation-target="error"></div>
    <div class="text-gray-600"><%= Faker::Internet.email %></div>
  </div>

  <div class="p">
    <%= f.label :primary, class: "label" %>
    <%= f.check_box :primary, class: "input" %>
  </div>

  <% if admin? %>
    <div class="p">
      <%= f.label :verified, class: "label" %>
      <%= f.check_box :verified, class: "input" %>
    </div>
  <% end %>

  <div class="p">
    <button class="button button--link" data-action="nested#remove">
      <%= t(".remove") %>
    </button>
  </div>
</div>