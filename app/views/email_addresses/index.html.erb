<%= turbo_stream_from @email_addresses %>

<div class="p"><%= link_to t(".new"), new_url, class: "button" %></div>

<%= render "shared/search" %>

<% if @email_addresses.any? %>
  <div class="p">
    <%= button_to t(".delete_all"), url, method: :delete, class: "button button--link" %>
  </div>
<% end %>

<%= render partial: "email_addresses/email_address",
       collection: @email_addresses,
       as: :email_address %>
