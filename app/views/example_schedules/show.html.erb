<% content_for(:title, @example_schedule) %>

<%= turbo_stream_from(@example_schedule) %>

<% if @example_schedule.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @example_schedule.id %></div>
  </div>
<% end %>

<% if @example_schedule.example.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".example") %></div>

    <% if can?(:show, @example_schedule.example) %>
      <div class="font-bold">
        <%= link_to(@example_schedule.example, @example_schedule.example, class: :link) %>
      </div>
    <% else %>
      <div class="font-bold"><%= @example_schedule.example %></div>
    <% end %>
  </div>
<% end %>

<% if @example_schedule.starts_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".starts_at") %></div>
    <div class="font-bold">
      <%= local_time(@example_schedule.starts_at, format: :default) %>
    </div>
  </div>
<% end %>

<% if @example_schedule.interval.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".interval") %></div>
    <div class="font-bold"><%= @example_schedule.translated_interval %></div>
  </div>
<% end %>

<% if @example_schedule.updated_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".updated_at") %></div>
    <div class="font-bold">
      <%= local_time(@example_schedule.updated_at, format: :default) %>
    </div>
  </div>
<% end %>

<% if @example_schedule.created_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".created_at") %></div>
    <div class="font-bold">
      <%= local_time(@example_schedule.created_at, format: :default) %>
    </div>
  </div>
<% end %>

<% if can?(:update, @example_schedule) %>
  <div class="p">
    <%= link_to(t(".edit"), edit_url, class: :link) %>
    <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
    <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
  </div>
<% end %>

<% if can?(:index, Version) %>
  <div class="p font-bold">
    <%= link_to(t(".versions"), [*nested, @example_schedule, :versions], class: :link) %>
  </div>

  <% if can?(:create, Version) %>
    <div class="p">
      <%= link_to(
        t(".new_version"),
        [:new, *nested, @example_schedule, :version],
        class: "button"
      ) %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "versions/version",
    collection: @versions,
    as: :version,
    locals: {
      nested: [*nested, @example_schedule]
    }
  ) %>
<% end %>

<% if can?(:index, Log) %>
  <div class="p font-bold">
    <%= link_to(t(".logs"), [*nested, @example_schedule, :logs], class: :link) %>
  </div>

  <% if can?(:create, Log) %>
    <div class="p">
      <%= link_to(
        t(".new_log"),
        [:new, *nested, @example_schedule, :log],
        class: "button"
      ) %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "logs/log",
    collection: @logs,
    as: :log,
    locals: {
      nested: [*nested, @example_schedule]
    }
  ) %>
<% end %>
