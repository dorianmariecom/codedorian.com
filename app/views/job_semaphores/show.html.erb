<% content_for(:title, @job_semaphore) %>

<%= turbo_stream_from(@job_semaphore) %>

<% if @job_semaphore.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @job_semaphore.id %></div>
  </div>
<% end %>

<% if @job_semaphore.key.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".key") %></div>
    <div class="code"><%= @job_semaphore.key_json %></div>
  </div>
<% end %>

<% if @job_semaphore.value.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".value") %></div>
    <div class="code"><%= @job_semaphore.value_json %></div>
  </div>
<% end %>

<% if @job_semaphore.expires_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".expires_at") %></div>
    <div class="font-bold">
      <%= local_time(@job_semaphore.expires_at, format: :default) %>
    </div>
  </div>
<% end %>

<% if @job_semaphore.updated_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".updated_at") %></div>
    <div class="font-bold">
      <%= local_time(@job_semaphore.updated_at, format: :default) %>
    </div>
  </div>
<% end %>

<% if @job_semaphore.created_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".created_at") %></div>
    <div class="font-bold">
      <%= local_time(@job_semaphore.created_at, format: :default) %>
    </div>
  </div>
<% end %>

<div class="p p--flex">
  <%= link_to(t(".edit"), edit_url, class: :link) %>
  <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
  <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
</div>

<% if can?(:index, Log) %>
  <div class="p font-bold">
    <%= link_to(t(".logs"), [@job_semaphore, :logs], class: :link) %>
  </div>

  <% if can?(:create, Log) %>
    <div class="p">
      <%= link_to(t(".new_log"), [:new, @job_semaphore, :log], class: "button") %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "logs/log",
    collection: @logs,
    as: :log,
    locals: {
      nested: [@job_semaphore]
    }
  ) %>
<% end %>
