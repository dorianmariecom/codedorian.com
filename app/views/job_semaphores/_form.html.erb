<%= form_for(show_url) do |f| %>
  <div class="p">
    <%= f.label(:key, class: :label) %>
    <%= f.text_field(
      :key,
      class: :input,
      autocomplete: :off,
      data: { form_type: :other }
    ) %>
  </div>

  <div class="p">
    <%= f.label(:value, class: :label) %>
    <%= f.text_field(
      :value,
      class: :input,
      autocomplete: :off,
      data: { form_type: :other }
    ) %>
  </div>

  <div class="p">
    <%= f.label(:expires_at, class: :label) %>
    <%= f.datetime_field(
      :expires_at,
      class: :input,
      autocomplete: :off,
      data: { form_type: :other }
    ) %>
  </div>

  <div class="p">
    <%= f.submit(
      submit,
      class: "button",
      data: {
        controller: "bridge--button",
        bridge__button_title_value: submit
      }
    ) %>
  </div>
<% end %>
