= form_for time_zone do |f|
  - if admin?
    .p
      = f.label :user_id, class: "label"
      = f.select :user_id, user_options(user_id: f.object.user_id), {}, class: "input"

  .p(data-controller="time-zone")
    = f.label :time_zone, class: "label", data: { time_zone_target: "label" }
    = f.select :time_zone, time_zone_options(time_zone: f.object.time_zone), {}, required: true, class: "input", data: { time_zone_target: "input", action: "time-zone#input", form_type: "other" }, autocomplete: "off"
    .text-red-600(hidden data-time-zone-target="error")
    .text-gray-600= TimeZone::TIME_ZONES.sample

  .p
    = f.label :primary, class: "label"
    = f.check_box :primary, class: "input"

  - if admin?
    .p
      = f.label :verified, class: "label"
      = f.check_box :verified, class: "input"

  .p= f.submit submit, class: "button", data: { controller: "bridge--button", bridge__button_title_value: submit }
