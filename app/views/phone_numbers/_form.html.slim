.phone-number.border-l.border-black.pl-5(data-new-record="#{f.object.new_record?}")
  = f.hidden_field :_destroy

  h2.font-bold.p= t(".phone_number")

  .p(data-controller="phone-number" data-phone-number-trim="true")
    = f.hidden_field :phone_number, data: { phone_number_target: "hidden" }
    = f.label :phone_number_input, class: "label", data: { phone_number_target: "label" }
    = f.phone_field :phone_number_input, value: f.object.formatted, class: "input", data: { phone_number_target: "input", action: "phone-number#input", form_type: "other" }, autocomplete: "tel"
    .text-red-600(hidden data-phone-number-target="error")
    .text-gray-600= Faker::PhoneNumber.phone_number_with_country_code

  .p
    = f.label :primary, class: "label"
    = f.check_box :primary, class: "input"

  - if admin?
    .p
      = f.label :verified, class: "label"
      = f.check_box :verified, class: "input"

  .p
    button.button.button--link(data-action="nested#remove")
      = t(".remove")
