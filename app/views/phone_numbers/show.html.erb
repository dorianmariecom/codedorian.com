<% content_for :title, @phone_number %>

<% if @phone_number.user.present? %>
  <div class="p">
    <span class="text-gray-600"><%= t(".user") %></span>

    <% if can?(:show, @phone_number.user) %>
      <span class="font-bold"><%= link_to @phone_number.user, @phone_number.user, class: "underline" %></span>
    <% else %>
      <span class="font-bold"><%= @phone_number.user %></span>
    <% end %>
  </div>
<% end %>

<% if @phone_number.phone_number.present? %>
  <div class="p">
    <span class="text-gray-600"><%= t(".phone_number") %></span>
    <span class="font-bold"><%= @phone_number.phone_number %></span>
  </div>
<% end %>

<div class="p">
  <span class="text-gray-600"><%= t(".primary") %></span>
  <span class="font-bold"><%= @phone_number.primary? %></span>
</div>

<div class="p">
  <span class="text-gray-600"><%= t(".verified") %></span>
  <span class="font-bold"><%= @phone_number.verified? %></span>
</div>

<div class="p">
  <span class="text-gray-600"><%= t(".updated_at") %></span>
  <span class="font-bold"><%= local_time(@phone_number.updated_at) %></span>
</div>

<div class="p">
  <span class="text-gray-600"><%= t(".created_at") %></span>
  <span class="font-bold"><%= local_time(@phone_number.created_at) %></span>
</div>

<div class="p">
  <%= link_to t(".edit"), [:edit, @phone_number], class: "underline" %>
  <%= button_to t(".delete"), @phone_number, method: :delete, class: "underline", form_class: "inline-block" %>
</div>