<% content_for(:title, @phone_number) %>

<%= turbo_stream_from(@phone_number) %>

<% if @phone_number.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @phone_number.id %></div>
  </div>
<% end %>

<% if @phone_number.user.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".user") %></div>
    <%= render("shared/user", user: @phone_number.user) %>
  </div>
<% end %>

<% if @phone_number.phone_number.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".phone_number") %></div>
    <div class="font-bold"><%= @phone_number.phone_number %></div>
  </div>
<% end %>

<% if @phone_number.primary.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".primary") %></div>
    <div class="font-bold"><%= @phone_number.primary? %></div>
  </div>
<% end %>

<% if admin? && @phone_number.verified.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".verified") %></div>
    <div class="font-bold"><%= @phone_number.verified? %></div>
  </div>
<% end %>

<% if @phone_number.updated_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".updated_at") %></div>
    <div class="font-bold">
      <%= local_time(@phone_number.updated_at, format: :default) %>
    </div>
  </div>
<% end %>

<% if @phone_number.created_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".created_at") %></div>
    <div class="font-bold">
      <%= local_time(@phone_number.created_at, format: :default) %>
    </div>
  </div>
<% end %>

<div class="p p--flex">
  <%= link_to(t(".edit"), edit_url, class: :link) %>
  <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
  <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
</div>

<% if can?(:index, Version) %>
  <div class="p font-bold">
    <%= link_to(t(".versions"), [*nested, @phone_number, :versions], class: :link) %>
  </div>

  <% if can?(:create, Version) %>
    <div class="p">
      <%= link_to(
        t(".new_version"),
        [:new, *nested, @phone_number, :version],
        class: "button"
      ) %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "versions/version",
    collection: @versions,
    as: :version,
    locals: {
      nested: [*nested, @phone_number]
    }
  ) %>
<% end %>

<% if can?(:index, Log) %>
  <div class="p font-bold">
    <%= link_to(t(".logs"), [*nested, @phone_number, :logs], class: :link) %>
  </div>

  <% if can?(:create, Log) %>
    <div class="p">
      <%= link_to(t(".new_log"), [:new, *nested, @phone_number, :log], class: "button") %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "logs/log",
    collection: @logs,
    as: :log,
    locals: {
      nested: [*nested, @phone_number]
    }
  ) %>
<% end %>
