<div class="phone-number border-l border-black pl-5" data-new-record="<%= f.object.new_record? %>">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>

  <h2 class="font-bold p"><%= t(".phone_number") %></h2>

  <div class="p" data-controller="phone-number">
    <%= f.hidden_field :phone_number, data: { phone_number_target: "hidden" } %>
    <%= f.label :phone_number_input, class: "label", data: { phone_number_target: "label" } %>
    <%= f.phone_field :phone_number_input, value: f.object.formatted, class: "input", data: { phone_number_target: "input", action: "phone-number#input", form_type: "other" }, autocomplete: "tel", placeholder: t(".phone_number_placeholder") %>
    <div class="text-red-600" hidden data-phone-number-target="error"></div>
    <div class="text-gray-600"><%= Faker::PhoneNumber.phone_number_with_country_code %></div>
  </div>

  <div class="p">
    <%= f.label :primary, class: "label" %>
    <%= f.check_box :primary, class: "input" %>
  </div>

  <% if admin? %>
    <div class="p">
      <%= f.label :verified, class: "label" %>
      <%= f.check_box :verified, class: "input" %>
    </div>
  <% end %>

  <div class="p">
    <button class="button button--link" data-action="nested#remove">
      <%= t(".remove") %>
    </button>
  </div>
</div>