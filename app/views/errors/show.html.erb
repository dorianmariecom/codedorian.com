<% content_for(:title, @error) %>

<%= turbo_stream_from(@error) %>

<% if @error.id.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".id") %></div>
    <div class="font-bold"><%= @error.id %></div>
  </div>
<% end %>

<% if @error.exception_class.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".exception_class") %></div>
    <div class="font-bold"><%= @error.exception_class %></div>
  </div>
<% end %>

<% if @error.fingerprint.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".fingerprint") %></div>
    <div class="font-bold"><%= @error.fingerprint %></div>
  </div>
<% end %>

<% if @error.message.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".message") %></div>
    <div class="font-bold"><%= @error.message %></div>
  </div>
<% end %>

<% if @error.severity.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".severity") %></div>
    <div class="font-bold"><%= @error.severity %></div>
  </div>
<% end %>

<% if @error.source.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".source") %></div>
    <div class="font-bold"><%= @error.source %></div>
  </div>
<% end %>

<% if @error.resolved_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".resolved_at") %></div>
    <div class="font-bold">
      <%= local_time(@error.resolved_at, format: :default) %>
    </div>
  </div>
<% end %>

<% if @error.updated_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".updated_at") %></div>
    <div class="font-bold">
      <%= local_time(@error.updated_at, format: :default) %>
    </div>
  </div>
<% end %>

<% if @error.created_at.present? %>
  <div class="p">
    <div class="text-gray-600"><%= t(".created_at") %></div>
    <div class="font-bold">
      <%= local_time(@error.created_at, format: :default) %>
    </div>
  </div>
<% end %>

<div class="p p--flex">
  <%= link_to(t(".edit"), edit_url, class: :link) %>
  <%= render("shared/confirm", text: t(".destroy"), url: destroy_url) %>
  <%= render("shared/confirm", text: t(".delete"), url: delete_url) %>
</div>

<div class="p font-bold">
  <%= link_to(
    t(".error_occurrences"),
    [@user, @error, :error_occurrences],
    class: :link
  ) %>
</div>

<%= render_collection(
  partial: "error_occurrences/error_occurrence",
  collection: @error_occurrences,
  as: :error_occurrence,
  locals: {
    nested: [@user, @error]
  }
) %>

<% if can?(:index, Log) %>
  <div class="p font-bold">
    <%= link_to(t(".logs"), [@user, @error, :logs], class: :link) %>
  </div>

  <% if can?(:create, Log) %>
    <div class="p">
      <%= link_to(t(".new_log"), [:new, @user, @error, :log], class: "button") %>
    </div>
  <% end %>

  <%= render_collection(
    partial: "logs/log",
    collection: @logs,
    as: :log,
    locals: {
      nested: [@user, @error]
    }
  ) %>
<% end %>
