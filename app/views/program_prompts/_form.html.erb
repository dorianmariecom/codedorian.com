<%= form_for(show_url) do |f| %>
  <% if admin? %>
    <div class="p">
      <%= f.label(:user_id, class: :label) %>
      <%= f.select(
        :user_id,
        user_options(user_id: f.object.user_id),
        {},
        class: :input,
        autocomplete: :off,
        data: { form_type: :other }
      ) %>
    </div>

    <% if @program.blank? %>
      <div class="p">
        <%= f.label(:program_id, class: :label) %>
        <%= f.select(
          :program_id,
          program_options(program_id: f.object.program_id),
          {},
          class: :input,
          autocomplete: :off,
          data: { form_type: :other }
        ) %>
      </div>
    <% end %>

    <div class="p">
      <%= f.label(:status, class: :label) %>
      <%= f.select(
        :status,
        program_prompt_status_options(status: f.object.status),
        {},
        class: :input,
        autocomplete: :off,
        data: { form_type: :other }
      ) %>
    </div>
  <% end %>

  <div class="p">
    <%= f.label(:name, class: :label) %>
    <%= f.text_field(
      :name,
      class: :input,
      autocomplete: :off,
      data: { form_type: :other }
    ) %>
  </div>

  <div class="p" data-controller="editor">
    <%= f.label(:input, class: :label) %>
    <div class="border border-black rounded overflow-hidden">
      <%= f.hidden_field(
        :input,
        autocomplete: :off,
        data: { editor_target: :input, form_type: :other }
      ) %>
      <div data-editor-target="editor"></div>
    </div>
  </div>

  <%= render("program_prompt_schedules/nested", f: f) %>

  <div class="p">
    <%= f.submit(
      submit,
      class: "button",
      data: {
        controller: "bridge--button",
        bridge__button_title_value: submit
      }
    ) %>
  </div>
<% end %>
