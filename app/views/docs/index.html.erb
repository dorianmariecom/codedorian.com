<% @docs.each do |doc| %>
  <div class="p font-bold">
    <%= link_to(doc["name"], doc_path(doc["name"]), class: "link") %>
  </div>

  <% if doc["examples"].present? %>
    <div class="p"><%= t(".examples") %></div>

    <% doc["examples"].each do |example| %>
      <div class="p code"><%= example %></div>
    <% end %>
  <% end %>

  <% if doc["class_functions"].present? %>
    <div class="p"><%= t(".class_functions") %></div>
    <ul class="ul p">
      <% doc["class_functions"].each do |class_function| %>
        <li class="li">
          <%= link_to(
            class_function["name"],
            doc_doc_path(
              doc_type: :class_functions,
              doc_id: doc["name"],
              id: class_function["name"]
            ),
            class: "link"
          ) %>

          <% if class_function["examples"].present? %>
            <div class="p"><%= t(".examples") %></div>

            <% ["examples"].each do |example| %>
              <div class="p code"><%= example %></div>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <% if doc["instance_functions"].present? %>
    <div class="p"><%= t(".instance_functions") %></div>
    <ul class="ul p">
      <% doc["instance_functions"].each do |instance_function| %>
        <li class="li">
          <div class="p">
            <%= link_to(
              instance_function["name"],
              doc_doc_path(
                doc_type: :instance_functions,
                doc_id: doc["name"],
                id: instance_function["name"]
              ),
              class: "link"
            ) %>
          </div>
          <% if instance_function["examples"].present? %>
            <div class="p"><%= t(".examples") %></div>

            <% instance_function["examples"].each do |example| %>
              <div class="p code"><%= example %></div>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>
